<mujoco model="guidewire">
  <extension>
    <plugin plugin="mujoco.elasticity.cable"/>
  </extension>

  <worldbody>=
    <composite type="cable" curve="s" count="51 1 1" size=".1" offset="0 0 0" initial="none">

      <plugin plugin="mujoco.elasticity.cable">
        <config key="flat" value="true"/>
        <config key="bend" value="1e9"/>
        <config key="vmax" value="0.005"/>
      </plugin>
      <!--is ball joint-->
      <joint kind="main" damping=".001" stiffness="0.001" margin="0.02"/>
      <geom type="capsule" size=".0008" rgba="1 1 1 1" condim="1"/>
    </composite>
  </worldbody>

</mujoco>
