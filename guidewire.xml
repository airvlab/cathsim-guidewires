<mujoco model="guidewire_pid_actuator">
    <extension>
        <plugin plugin="mujoco.elasticity.cable"/>
        <plugin plugin="mujoco.pid">
            <instance name="linear_pid">
                <config key="kp" value=".4"/>
                <config key="ki" value=".4"/>
                <config key="kd" value=".04"/>
                <config key="imax" value=".1"/>
            </instance>
            <instance name="rotate_pid">
                <config key="kp" value=".4"/>
                <config key="ki" value=".4"/>
                <config key="kd" value=".04"/>
                <config key="imax" value=".1"/>
            </instance>
        </plugin>
    </extension>

    <worldbody>
        <body name="actuator_guidewire" pos="0 0 0">
            <geom pos="0 .2 0" size="0.001"/>
            <joint name="linear_joint" type="slide" pos="0 0.2 0" axis="0 1 0" limited="true" range="-3.14158 3.14158" frictionloss="50" />
            <body name="straight-guidewire" pos="0 0 0" euler="0 0 90">
                <composite type="cable" curve="s" size="0.65" offset="0 0 0" initial="none" count="61 1 1">
                    <joint kind="main" damping=".001" stiffness="0.001" margin="0.02"/>
                    <geom type="capsule" size=".0008" rgba="1 1 1 1" condim="1"/>
                </composite>
            </body>
            <joint name="rotate_joint" type="hinge" pos="0 0.2 0" axis="0 1 0" limited="true" range="-3.14158 3.14158" frictionloss="50" />
        </body>
    </worldbody>

    <actuator>
        <plugin joint="linear_joint" plugin="mujoco.pid" instance="linear_pid" ctrlrange="-1 1" actdim="1"/>
        <plugin joint="rotate_joint" plugin="mujoco.pid" instance="rotate_pid" ctrlrange="-3.14 3.14" actdim="1"/>
    </actuator>
</mujoco>
